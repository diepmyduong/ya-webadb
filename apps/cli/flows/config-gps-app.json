{
    "name": "config-gps-app",
    "tasks": [
        {
            "name": "Open Settings",
            "taskName": "open-app",
            "taskParams": {
                "packageName": "com.android.settings",
                "activityName": ".Settings"
            }
        },
        {
            "name": "Delay",
            "taskName": "delay",
            "taskParams": {
                "timeMs": 200
            }
        },
        {
            "name": "Swipe to end",
            "taskName": "swipe",
            "taskParams": {
                "action": "up",
                "distance": 1000
            }
        },
        {
            "name": "Delay",
            "taskName": "delay",
            "taskParams": {
                "timeMs": 1000
            }
        },
        {
            "name": "Find Developer options Region",
            "taskName": "search-template-region",
            "taskParams": {
                "templatePath": "imgs/developer-options.png",
                "confidence": 0.4,
                "scaleSteps": [0.6]
            }
        },
        {
            "name": "Tap Developer options",
            "taskName": "tap",
            "taskParams": {
                "point": [
                    "{{$data.input$.center[0]}}",
                    "{{$data.input$.center[1]}}"
                ]
            }
        },
        {
            "name": "Delay",
            "taskName": "delay",
            "taskParams": {
                "timeMs": 1000
            }
        },
        {
            "name": "Find Mock location app Region",
            "taskName": "search-template-region",
            "taskParams": {
                "templatePath": "imgs/select-mock-location-app.png",
                "confidence": 0.4,
                "swipeOnNotFound": true,
                "swipeDirection": "up",
                "swipeSteps": [400, 400, 400, 400, 400]
            }
        }
    ]
}
